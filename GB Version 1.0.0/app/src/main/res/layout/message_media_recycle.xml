<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="10dp">

    <LinearLayout
        android:id="@+id/mediaMessageRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_sent_box"
            android:maxHeight="350dp"
            android:minWidth="300dp"
            android:minHeight="50dp"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="25dp"
            android:paddingBottom="7dp">
            <!--image section-->
            <ImageView
                android:id="@+id/sendIMG"
                android:layout_width="250dp"
                android:layout_height="230dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.6"
                android:src="@drawable/image_icon"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/sendingTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:tint="@color/hint" />
            <!--Video section-->
            <VideoView
                android:id="@+id/sendVideo"
                android:layout_width="250dp"
                android:layout_height="220dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/sendingTime"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:tint="@color/dc_text_bg" />
            <!--Document Section-->
            <ImageView
                android:id="@+id/docImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/white"
                android:src="@drawable/doument_icon"
                android:rotation="40"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:visibility="gone"
                android:text="GBwhatsdocuments.jpg"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/docImg"
                app:layout_constraintStart_toEndOf="@+id/docImg"
                app:layout_constraintTop_toTopOf="@+id/docImg"
                app:layout_constraintVertical_bias="0.545" />
            <!--Audio Section-->
            <ImageView
                android:id="@+id/audioImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/white"
                android:padding="1dp"
                android:visibility="gone"
                android:src="@drawable/music_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/audioName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="GBwhats music file"
                android:textColor="@color/black"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/audioImg"
                app:layout_constraintEnd_toStartOf="@+id/playAudio"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/audioImg"
                app:layout_constraintTop_toTopOf="@+id/audioImg"
                app:layout_constraintVertical_bias="0.5" />
            <ImageView
                android:id="@+id/playAudio"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/play_ic"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/audioName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/audioName" />
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:tickMarkTint="@color/primary"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/sendingTime"
                app:layout_constraintEnd_toEndOf="@+id/playAudio"
                app:layout_constraintStart_toStartOf="@+id/audioImg"
                app:layout_constraintTop_toBottomOf="@+id/audioImg" />


            <TextView
                android:id="@+id/sendingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="8dp"
                android:text="6:00 am 16/05/22"
                android:textColor="#676767"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView5" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/double_tick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>