<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="5dp"
        android:layout_marginStart="3dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/custom_receive_msg_bg"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/predictionHori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send from(Prediction)"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mediaImageRecycleLayout" />
            <ImageView
                android:id="@+id/nameTutorial"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/help_ic"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintEnd_toEndOf="@+id/mediaImageRecycleLayout"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/textView7"
                app:layout_constraintVertical_bias="0" />
        </LinearLayout>
        <HorizontalScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearLayout15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akash Das"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:elevation="2dp"
                    android:layout_margin="3dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/custom_dialog"
                    android:backgroundTint="@color/dir_chat"/>
                <TextView
                    android:id="@+id/name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subashis Ghosh"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/primary"
                    android:elevation="2dp"
                    android:layout_margin="3dp"
                    android:paddingVertical="5dp"
                    android:visibility="gone"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/custom_dialog"
                    android:backgroundTint="@color/dir_chat"/>
                <TextView
                    android:id="@+id/name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deepayan"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:elevation="2dp"
                    android:layout_margin="3dp"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/custom_dialog"
                    android:backgroundTint="@color/dir_chat"/>

            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:id="@+id/mediaImageRecycleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/media_marginEnd"
            android:gravity="start"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.cardview.widget.CardView
                android:id="@+id/mediaCard"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="1dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1.5dp"
                android:visibility="gone"
                android:backgroundTint="#F4F4F4">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />
                <ImageButton
                    android:id="@+id/playButton"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/play_round_icon" />
                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/docCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="3dp"
                app:cardElevation="0.25dp"
                android:visibility="visible"
                android:layout_marginHorizontal="2dp"
                android:backgroundTint="#F5F5F5">

                <LinearLayout
                    android:layout_width="376dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="7dp">

                    <ImageView
                        android:id="@+id/docIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="7dp"
                        android:src="@drawable/music_icon" />

                    <TextView
                        android:id="@+id/docName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:singleLine="true"
                        android:text="GBwhats music.mp3"
                        android:textColor="@color/mid_black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/whatsappBtn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:backgroundTint="@color/transparent"
                    android:padding="3dp"
                    android:src="@drawable/whatsapp_focused"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/whatsappBsBtn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/whatsappBsBtn" />

                <ImageButton
                    android:id="@+id/whatsappBsBtn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:backgroundTint="@color/transparent"
                    android:padding="3dp"
                    android:src="@drawable/ws_business_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/shareBtn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/whatsappBtn"
                    app:layout_constraintTop_toTopOf="@+id/shareBtn" />

                <ImageButton
                    android:id="@+id/shareBtn"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:backgroundTint="@color/transparent"
                    android:padding="3dp"
                    android:src="@drawable/share_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/deletebtn"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/whatsappBsBtn" />

                <ImageButton
                    android:id="@+id/deletebtn"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:backgroundTint="@color/transparent"
                    android:padding="9dp"
                    android:src="@drawable/delete_icon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/shareBtn"
                    app:layout_constraintTop_toTopOf="@+id/shareBtn" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_frame"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        tools:ignore="RtlSymmetry">

    </FrameLayout>



</LinearLayout>