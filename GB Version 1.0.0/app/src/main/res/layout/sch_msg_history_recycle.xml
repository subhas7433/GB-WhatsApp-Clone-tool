<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/schiduleRVCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardBackgroundColor="#FFFFFF"
        android:minWidth="400dp"
        app:cardElevation="@dimen/recycle_card_Elevation"
        android:layout_marginHorizontal="7dp"
        app:cardCornerRadius="@dimen/input_box_radious"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F6F6"
                android:paddingHorizontal="5dp"
                android:paddingVertical="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLength="18"
                    android:layout_marginStart="5dp"
                    android:singleLine="true"
                    android:text="No name set yet"
                    android:textColor="@color/mid_black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:text="(9555583333)"
                    android:textColor="#069855"
                    android:textSize="10sp"
                    android:transitionName="nameTransition"
                    app:layout_constraintBottom_toBottomOf="@+id/name"
                    app:layout_constraintStart_toEndOf="@+id/name"
                    app:layout_constraintTop_toTopOf="@+id/name" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/edit_lg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--Imageview and Videoview layout-->
            <LinearLayout
                android:id="@+id/imgvideoHisLay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                <LinearLayout
                    android:id="@+id/mediaLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/musicLA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/custom_back100"
                        android:gravity="center"
                        android:backgroundTint="#0D000000"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/musicIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/music_icon" />
                        <TextView
                            android:id="@+id/musicTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="0"
                            android:textColor="@color/teal_200"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/videoLA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/custom_back100"
                        android:gravity="center"
                        android:backgroundTint="#0D000000"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/videoIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/video_icon" />
                        <TextView
                            android:id="@+id/videoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="0"
                            android:textColor="@color/ascii_cl"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/imageLA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/custom_back100"
                        android:gravity="center"
                        android:backgroundTint="#0D000000"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/image_icon" />
                        <TextView
                            android:id="@+id/imageTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="0"
                            android:textColor="@color/blue_700"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/documentLA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/custom_back100"
                        android:gravity="center"
                        android:backgroundTint="#0D000000"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/documentIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/doument_icon" />
                        <TextView
                            android:id="@+id/documentTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="0"
                            android:textColor="#FF1515"
                            android:paddingLeft="5dp"
                            android:paddingRight="10dp"/>
                    </LinearLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/selected_media" />

                </LinearLayout>
            </LinearLayout>
            <!--Music layout-->
            <LinearLayout
                android:id="@+id/musicHisLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="4dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgvideoHisLay">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/music_icon" />

                <TextView
                    android:id="@+id/musicName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:maxLength="25"
                    android:text="gbwhatsaudio.mp3"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </LinearLayout>
            <!--Document layout-->
            <LinearLayout
                android:id="@+id/documentHisLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="4dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/musicHisLay">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="-40"
                    android:src="@drawable/doument_icon" />

                <TextView
                    android:id="@+id/docName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:maxLength="25"
                    android:text="ImagesFileName1234567.jpg"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </LinearLayout>
            <!--Messages layout-->
            <LinearLayout
                android:id="@+id/msgHisLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="4dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/documentHisLay">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ms_lg_focused"
                    app:tint="@color/about_cl" />

                <TextView
                    android:id="@+id/Messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="No message"
                    android:textColor="@color/gray_800"
                    android:textSize="13sp"
                    android:visibility="visible" />
            </LinearLayout>
            <!--Schedule layout-->
            <LinearLayout
                android:id="@+id/schduleHisLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingStart="4dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/msgHisLay">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="1.5dp"
                    android:src="@drawable/schedule_icon_20"
                    app:tint="@color/about_cl" />
                <TextView
                    android:id="@+id/schtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:maxLength="25"
                    android:text="01 Aug 2022 8:35pm"
                    android:textColor="@color/gray_800"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </LinearLayout>



            <TextView
                android:id="@+id/statuslb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="3dp"
                android:text="Status : "
                android:paddingStart="2dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schduleHisLay" />
            <!--Status State-->
            <TextView
                android:id="@+id/isdraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:text="Pending"
                android:textColor="@color/status"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/statuslb"
                app:layout_constraintStart_toEndOf="@+id/statuslb"
                app:layout_constraintTop_toTopOf="@+id/statuslb" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="Create on "
                android:textAlignment="textEnd"
                android:textColor="#818181"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="@+id/date"
                app:layout_constraintEnd_toStartOf="@+id/date"
                app:layout_constraintTop_toTopOf="@+id/date" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:text="2 hours 15 minutes"
                android:textAlignment="textEnd"
                android:textColor="#818181"
                android:textSize="7sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageButton
                android:id="@+id/wsLogo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/whatsapp_focused_35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schduleHisLay" />

            <ImageButton
                android:id="@+id/wsBsLogo"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ws_business_20"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>