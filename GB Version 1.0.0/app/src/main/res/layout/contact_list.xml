<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!-- Top nav -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="10dp"
        android:paddingStart="5dp">
        <TextView
            android:id="@+id/listDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Contact List"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sectionSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/colorPrimaryVariant"
            android:textSize="16sp"
            android:thumb="@drawable/thumb"
            app:showText="false"
            app:track="@drawable/switch_track" />
        <TextView
            android:id="@+id/clearAllContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:drawableTop="@drawable/delete_icon_18dp"
            android:drawableTint="@color/red"
            android:text="Clear all"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="10sp"
            android:paddingHorizontal="7dp"
            android:paddingVertical="3dp"
            android:textColor="@color/red"/>
        <ImageView
            android:id="@+id/pickContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/add_icon"
            android:background="@drawable/custom_inputbox"
            android:backgroundTint="@color/colorSecondaryVariant"
            app:tint="@color/white" />
    </LinearLayout>
    <!-- Search textinput -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="5dp"
        android:hint="Search Name"
        android:textColorHint="@color/hint"
        app:boxBackgroundColor="@color/transparent"
        app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
        app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
        app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
        app:boxCornerRadiusTopStart="@dimen/input_box_radious"
        app:boxStrokeColor="@color/primary"
        app:boxStrokeWidth="0.1dp"
        app:boxStrokeWidthFocused="1dp"
        app:endIconMode="clear_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/testAutoBtn">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/autoReplyTextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:maxLength="30"
            android:singleLine="true"
            android:inputType="textFilter"
            android:focusableInTouchMode="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
            android:textColor="@color/primary"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">
            <!--No Contact Layout-->
            <LinearLayout
            android:id="@+id/noDataLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="visible"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="190dp"
                android:src="@drawable/save_lg_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />
            <TextView
                android:id="@+id/noContactTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not saved yet"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:visibility="visible"
                android:textColor="@color/about_cl"/>
        </LinearLayout>
            <!--Specific Contact and Group Layout-->
            <LinearLayout
                android:id="@+id/specificContactLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="vertical">
            <!--Contact Recycler-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/specificRecycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingBottom="75dp"
                android:layout_marginHorizontal="7dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/recycle_specific_customlist" />
        </LinearLayout>
            <!--My Contact Layout-->
            <LinearLayout
                android:id="@+id/MyContactList"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/showContactRView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginHorizontal="7dp"
                    tools:listitem="@layout/contact_list_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>