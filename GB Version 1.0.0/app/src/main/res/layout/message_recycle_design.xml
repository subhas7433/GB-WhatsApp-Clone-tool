<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMessegeRecycle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:minHeight="50dp"
    android:scrollbars="vertical"
    android:minWidth="120dp"
    android:layout_marginVertical="3dp"
    android:layout_marginEnd="75dp"
    android:layout_marginStart="2dp"
    android:paddingStart="24dp"
    android:paddingRight="7dp"
    android:outlineProvider="paddedBounds"
    android:background="@drawable/custom_receive_msg_bg">

    <TextView
        android:id="@+id/recycleMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:text="Hi! This is messages from GBwhats app. Here you can restore all media and message."
        android:textColor="@color/mid_black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/recycleTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />

    <TextView
        android:id="@+id/recycleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="6:00 am 16/05/22"
        android:textColor="#676767"
        android:textSize="8sp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>