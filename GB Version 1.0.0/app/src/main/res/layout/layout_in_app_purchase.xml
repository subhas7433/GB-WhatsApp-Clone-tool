<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/subLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:clickable="true"
    android:layout_weight="1"
    android:background="@color/layout_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:clickable="true"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="@dimen/home_card_radious"
        app:cardElevation="@dimen/home_card_elevation"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="370dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:background="@drawable/custom_btn"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#Ads Free"
                android:textAlignment="center"
                android:textColor="@color/mid_black"
                android:fontFamily="@font/opensans_bold"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly"
                android:fontFamily="@font/opensans_light"
                android:textAlignment="center"
                android:textColor="@color/primary"
                android:textSize="27sp"/>
            <TextView
                android:id="@+id/subscribed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/premium"
                android:text="Subscribed"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/mid_black"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ads will not disturb you to use our app."
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:textColor="@color/premium"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 399"
                android:layout_gravity="end"
                android:fontFamily="@font/opensans_bold"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/mid_black"
                android:textSize="26sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>