<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:minWidth="300dp"
    android:paddingHorizontal="15dp"
    android:paddingVertical="5dp">
    <LinearLayout
        android:id="@+id/predictionHori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send from(Predection)"
            android:textStyle="bold"
            android:textColor="#222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mediaImageRecycleLayout" />
        <ImageView
            android:id="@+id/predictionTutorial"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/help_ic"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/mediaImageRecycleLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintVertical_bias="0" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akash Das"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:elevation="2dp"
                android:layout_margin="3dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/dir_chat"/>
            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subashis Ghosh"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/primary"
                android:elevation="2dp"
                android:layout_margin="3dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/dir_chat"/>
            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deepayan"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:elevation="2dp"
                android:layout_margin="3dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/dir_chat"/>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More option"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mediaImageRecycleLayout" />
    <TextView
        android:id="@+id/whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/whatsapp_focused"
        android:drawablePadding="10dp"
        android:text="WhatsApp"
        android:padding="10dp"
        android:textColor="#222"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/added_layout_bg"/>
    <TextView
        android:id="@+id/whatsappBsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/ws_business_20"
        android:drawablePadding="10dp"
        android:text="WhatsApp Business"
        android:padding="10dp"
        android:textColor="#222"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/added_layout_bg"/>
    <TextView
        android:id="@+id/shareBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/share_icon"
        android:drawablePadding="10dp"
        android:text="Share"
        android:padding="10dp"
        android:textColor="#222"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/added_layout_bg"/>
    <TextView
        android:id="@+id/deletebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/delete_icon"
        android:drawablePadding="10dp"
        android:text="Delete"
        android:padding="10dp"
        android:textColor="#222"
        android:textSize="14sp" />
</LinearLayout>