<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activityOur.settingActivity">

    <!--TOP Navbar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/home_icon"
            android:layout_height="@dimen/home_icon"
            android:layout_gravity="start"
            android:background="#00ffffff"
            android:onClick="goBack"
            android:padding="4dp"
            android:src="@drawable/back_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/mid_black" />


        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/app_version"
            android:textColor="@color/mid_black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/back"
            app:layout_constraintTop_toTopOf="@+id/back" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--First Layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                app:cardCornerRadius="@dimen/home_card_radious"
                app:cardElevation="@dimen/home_card_elevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/deleteAllMedia"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:backgroundTint="@color/presed_tint"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:padding="3dp"
                            android:src="@drawable/delete_icon_18dp"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Delete All the Data"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/yt_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/yt_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Follow on Youtube"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/privacy_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        app:cardElevation="0dp"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/privacy_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Privacy policy"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/terms_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:backgroundTint="@color/presed_tint"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:padding="2dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:src="@drawable/term_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Terms and condition"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/coplainVA"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/chat_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Complain"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/requestFLA"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:padding="4dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/usage_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Request a feature"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/feedbackFLA"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/feedback_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Give a feedback"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/chat_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:visibility="visible"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/chat_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Chat with us"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/rate_us_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/presed_tint"
                        android:onClick="onClick"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/rate_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Rate the app"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/faq_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/help_ic"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="FAQs"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/share_app_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:backgroundTint="@color/presed_tint"
                        app:cardElevation="0dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_vertical"
                            android:padding="2dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:src="@drawable/share_icon"
                            app:tint="@color/primary_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Share the app"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_underline"
                        android:background="@color/gray_500"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/update_app_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/setting_card_height"
                        android:clickable="true"
                        android:onClick="onClick"
                        app:cardElevation="0dp"
                        android:backgroundTint="@color/presed_tint"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="4dp"
                            android:layout_marginStart="@dimen/setting_margin_left"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/download_lg" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/setting_margin_left_txt"
                            android:text="Check for update"
                            android:textColor="@color/primary_text"
                            android:textSize="17sp" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--Buttom Layout-->
                <TextView
                    android:id="@+id/verifiedPlayBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="10dp"
                    android:paddingVertical="7dp"
                    android:paddingHorizontal="15dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textAlignment="center"
                    android:textColor="@color/primary"
                    android:backgroundTint="#F1FFF9"
                    android:background="@drawable/custom_btn"
                    android:text="@string/we_dont_collect"/>
                <ImageView
                    android:id="@+id/appImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/app_logo_transparent"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    android:layout_gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/appImg"
                    app:layout_constraintStart_toEndOf="@+id/appImg"
                    app:layout_constraintTop_toTopOf="@+id/appImg"
                    app:layout_constraintVertical_bias="0.385" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - By Affix Studio"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:textSize="10sp"
                    android:layout_marginBottom="25dp"
                    app:layout_constraintStart_toStartOf="@+id/textView28"
                    app:layout_constraintTop_toBottomOf="@+id/textView28" />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <!--FAQ Layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/faqRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/faqs_recycle" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>