<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/added_layout_bg"
        android:paddingBottom="20dp"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:visibility="visible">

        <!--TOP Navbar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">
            <TextView
                android:id="@+id/add_specificTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Group"
                android:textColor="@color/primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/deleteReplyBt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="gone"
                app:cornerRadius="30dp" />
            <!-- add Button -->
            <Button
                android:id="@+id/addGroupSave"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="30dp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@+id/autoReplyTextInputLayout" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/LR_margin"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/input_icon"
                android:layout_height="@dimen/input_icon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/accent"
                android:src="@drawable/whatsapp_focused"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Decoration_Text"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/musicbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contactNameBox"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:elevation="0.5dp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:textColorHint="@color/hint"
                app:boxBackgroundColor="@color/transparent"
                app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
                app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
                app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
                app:boxCornerRadiusTopStart="@dimen/input_box_radious"
                app:boxStrokeColor="@color/primary"
                app:boxStrokeWidth="@dimen/inputboxStrokeWidth"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/groupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Group name (Case sensitive)"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:padding="15dp"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:backgroundTint="@color/colorSecondaryVariant"
                app:cardCornerRadius="10dp"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/contactBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/group_icon_focused"
                    android:backgroundTint="@color/colorSecondaryVariant"
                    android:padding="25dp"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

</LinearLayout>
</LinearLayout>


