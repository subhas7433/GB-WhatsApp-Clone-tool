<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_nav_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/added_layout_bg"
        android:paddingBottom="20dp"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:visibility="visible">

        <!--TOP Navbar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp">
            <TextView
                android:id="@+id/add_specificTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="New Contact"
                android:textColor="@color/primary"
                android:textSize="15sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/deleteReplyBt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/red"
                android:gravity="center"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:visibility="gone"
                app:cornerRadius="30dp" />
            <!-- add Button -->
            <Button
                android:id="@+id/createReplyBt"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Create"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:cornerRadius="30dp"
                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@+id/autoReplyTextInputLayout" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/chat_backround"
            android:padding="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="55dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/custom_receive_msg_bg"
                android:maxHeight="100dp"
                android:minWidth="100dp"
                android:minHeight="30dp"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:id="@+id/previewIncomingMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="start"
                    android:text="@string/incomingMessagePreview"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="60dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/custom_sent_box"
                android:maxHeight="100dp"
                android:minWidth="100dp"
                android:minHeight="30dp"
                android:orientation="vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <TextView
                    android:id="@+id/previewAutoMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="7dp"
                    android:gravity="start"
                    android:text="@string/defaultAutoReplyPreview"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/LR_margin"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/input_icon"
                android:layout_height="@dimen/input_icon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/accent"
                android:src="@drawable/whatsapp_focused"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Decoration_Text"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/musicbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primary" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contactNameBox"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:elevation="0.5dp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:textColorHint="@color/hint"
                app:boxBackgroundColor="@color/transparent"
                app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
                app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
                app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
                app:boxCornerRadiusTopStart="@dimen/input_box_radious"
                app:boxStrokeColor="@color/primary"
                app:boxStrokeWidth="@dimen/inputboxStrokeWidth"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/senderName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Contact name (case sensitive)"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:padding="15dp"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="7dp"
                android:clickable="true"
                android:backgroundTint="@color/colorSecondaryVariant"
                app:cardCornerRadius="10dp"
                android:focusable="true">

                <ImageButton
                    android:id="@+id/contactBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_person_24"
                    android:backgroundTint="@color/colorSecondaryVariant"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/customisedCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/checkbox_tint"
                android:text="Customized Incoming message"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/customisedIncomingTutorial"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/help_ic"
                android:backgroundTint="@color/colorOnSurface" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/customisedMsgLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="@dimen/LR_margin"
                android:layout_marginBottom="3dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/input_icon"
                    android:layout_height="@dimen/input_icon"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/custom_btn"
                    android:backgroundTint="@color/accent"
                    android:src="@drawable/ms_lg_focused"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/Decoration_Text"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/musicbtn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primary" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:elevation="0.5dp"
                    android:gravity="start"
                    android:scrollbars="vertical"
                    android:textColorHint="@color/hint"
                    app:boxBackgroundColor="@color/transparent"
                    app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
                    app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
                    app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
                    app:boxCornerRadiusTopStart="@dimen/input_box_radious"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidth="@dimen/inputboxStrokeWidth"
                    app:boxStrokeWidthFocused="1dp"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="Type Incoming messages"
                        android:maxLength="200"
                        android:maxLines="4"
                        android:padding="15dp"
                        android:textColor="@color/primary"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Message Match Option"
                    android:textColor="@color/primary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/messageMatchTutorial"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/help_ic"
                    android:backgroundTint="@color/colorOnSurface" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/exact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:buttonTint="@color/primary"
                        android:text="Exact Match"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/contain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/primary"
                        android:text="Contain"
                        android:textSize="16sp" />

                </RadioGroup>
            </HorizontalScrollView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/LR_margin"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/input_icon"
                android:layout_height="@dimen/input_icon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="@color/accent"
                android:src="@drawable/reply_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/Decoration_Text"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/musicbtn"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/primary" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:elevation="0.5dp"
                android:gravity="start"
                android:scrollbars="vertical"
                android:textColorHint="@color/hint"
                app:boxBackgroundColor="@color/transparent"
                app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
                app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
                app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
                app:boxCornerRadiusTopStart="@dimen/input_box_radious"
                app:boxStrokeColor="@color/primary"
                app:boxStrokeWidth="@dimen/inputboxStrokeWidth"
                app:boxStrokeWidthFocused="1dp"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="Type Auto-Reply text"
                    android:maxLength="200"
                    android:maxLines="4"
                    android:padding="15dp"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/LR_margin"
            android:layout_marginEnd="@dimen/LR_margin"
            android:layout_marginBottom="10dp"
            android:textColorHint="@color/colorPrimaryVariant"
            app:boxBackgroundColor="@color/transparent"
            app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
            app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
            app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
            app:boxCornerRadiusTopStart="@dimen/input_box_radious"
            app:boxStrokeColor="@color/primary"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintTextColor="@color/hint">

            <AutoCompleteTextView
                android:id="@+id/quick_ms_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:paddingStart="50dp"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:text="Choose Quick messages"
                android:textColor="@color/primary"
                android:textSize="15sp"
                tools:listitem="@layout/style_spinner" />

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>
</LinearLayout>