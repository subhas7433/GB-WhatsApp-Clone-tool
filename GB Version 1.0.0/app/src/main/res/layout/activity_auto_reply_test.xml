<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.autoReplyTest">
    <!--Selection layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingBottom="35dp"
            android:text="Auto Reply Test"
            android:textColor="@color/primary"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/everyoneBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

            <ImageButton
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:background="@drawable/whatsapp"
                android:backgroundTint="@color/white" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Everyone"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/everyoneBtn"
            app:layout_constraintStart_toStartOf="@+id/everyoneBtn"
            app:layout_constraintTop_toBottomOf="@+id/everyoneBtn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/contactBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toStartOf="@+id/groupBtn"
            app:layout_constraintStart_toEndOf="@+id/everyoneBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

            <ImageButton
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@drawable/contact_icon"
                android:backgroundTint="@color/white" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Contact"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/contactBtn"
            app:layout_constraintStart_toStartOf="@+id/contactBtn"
            app:layout_constraintTop_toBottomOf="@+id/contactBtn" />

        <androidx.cardview.widget.CardView
            android:id="@+id/groupBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/group_icon_focused"
                android:backgroundTint="@color/white" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Group"
            android:textColor="@color/black"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@+id/groupBtn"
            app:layout_constraintStart_toStartOf="@+id/groupBtn"
            app:layout_constraintTop_toBottomOf="@+id/groupBtn" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="It will help you understand how it works."
            android:textAlignment="center"
            android:textColor="@color/about_cl"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--chat layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chat_bg"
        android:backgroundTintMode="multiply"
        android:backgroundTint="@color/chat_backround"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/goback"
                android:layout_width="@dimen/back_icon_topnav"
                android:layout_height="@dimen/back_icon_topnav"
                android:layout_gravity="center_vertical"
                android:background="#00ffffff"
                android:clipToOutline="true"
                android:src="@drawable/back_icon"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/custom_btn"
                android:backgroundTint="#D8D8D8"
                android:paddingTop="9dp"
                android:src="@drawable/ic_baseline_person_24"
                android:transitionName="imageTransition"
                app:layout_constraintBottom_toBottomOf="@+id/underline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/chatName"
                app:layout_constraintVertical_bias="0.266"
                app:tint="@color/accent" />

            <!--Spinner for Contact-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="10dp"
                android:paddingTop="0dp"
                android:background="@drawable/spinner_back"
                android:backgroundTint="#26FFFFFF"
                android:focusable="false"
                android:focusedByDefault="false"
                android:textColorHint="@color/white"
                app:boxBackgroundColor="@color/transparent"
                app:boxStrokeColor="@color/transparent"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:hintTextColor="@color/hint">

                <AutoCompleteTextView
                    android:id="@+id/selectSection"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:focusedByDefault="false"
                    android:inputType="none"
                    android:paddingTop="-15dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="0dp"
                    android:text="Everyone"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:listitem="@layout/style_spinner" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="@dimen/Elevation_input_box"
            android:textColorHint="@color/white"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="@dimen/input_box_radious"
            app:boxCornerRadiusBottomStart="@dimen/input_box_radious"
            app:boxCornerRadiusTopEnd="@dimen/input_box_radious"
            app:boxCornerRadiusTopStart="@dimen/input_box_radious"
            app:boxStrokeColor="@color/white"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextColor="@color/hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

            <AutoCompleteTextView
                android:id="@+id/selectPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/contact_icon"
                android:drawablePadding="10dp"
                android:inputType="none"
                android:paddingTop="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp"
                android:text="Username"
                android:textColor="@color/primary"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="5dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

            <LinearLayout
                android:id="@+id/demoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/custom_receive_msg_bg"
                    android:maxHeight="200dp"
                    android:minWidth="100dp"
                    android:minHeight="50dp"
                    android:orientation="vertical"
                    android:paddingStart="28dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/incomingMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:gravity="start"
                        android:text="Hi! You can test your Auto-Reply by sending a message to this chat."
                        android:textColor="@color/mid_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/recycleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="4dp"
                        android:text="6:00 am 16/05/22"
                        android:textColor="#676767"
                        android:textSize="9sp"
                        android:visibility="gone" />


                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/custom_sent_box"
                    android:maxHeight="200dp"
                    android:minWidth="100dp"
                    android:minHeight="70dp"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="25dp"
                    android:visibility="gone"
                    android:paddingBottom="7dp">

                    <TextView
                        android:id="@+id/reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Type any text"
                        android:textColor="@color/colorPrimaryVariant"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView13"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.052" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="10dp"
                        android:text="6:00 am 16/05/22"
                        android:textColor="#676767"
                        android:textSize="9sp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView5" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/double_tick"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/auto_recycle_test" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/blue"
                app:cardCornerRadius="30dp">

                <ImageButton
                    android:id="@+id/whatsBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:rotation="-180"
                    android:background="@drawable/send_lg"
                    android:backgroundTint="@color/white" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/enterIncomingMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent"
                    android:clipToPadding="false"
                    android:hint="Type Message"
                    android:lineSpacingExtra="5dp"
                    android:padding="14dp"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>