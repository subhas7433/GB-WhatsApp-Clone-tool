<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:minWidth="@dimen/dialog_min_width">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:text="Disclosure"
        android:paddingLeft="20dp"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/accTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accessibility Service"
            android:textColor="@color/colorPrimaryVariant"
            android:textSize="15sp"
            android:fontFamily="@font/opensans_semibold"
            android:textAllCaps="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:visibility="visible" />
        <TextView
            android:id="@+id/accDis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/AccesssiblityDT"
            android:textAlignment="textStart"
            android:textColor="@color/blue_gray_900"
            android:textSize="15sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/allFileTI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All File Access Permission"
                android:textColor="@color/colorPrimaryVariant"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn"
                android:backgroundTint="#08000000"
                android:padding="5dp"
                android:src="@drawable/storage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/allFileTI"
                app:tint="@color/primary" />

            <TextView
                android:id="@+id/allFIleDes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/all_files_des"
                android:textColor="@color/blue_gray_900"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView16"
                app:layout_constraintTop_toTopOf="@+id/imageView16" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/decline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:elevation="5dp"
            android:gravity="center"
            android:text="Decline"
            android:textAllCaps="false"
            android:textColor="@color/blue_gray_900"
            android:textSize="14sp"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="20dp"
            android:background="@color/hint"/>
        <Button
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:elevation="0dp"
            android:gravity="center"
            android:text="Agree"
            android:fontFamily="@font/opensans_semibold"
            android:textAllCaps="false"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorSecondaryVariant"
            android:textSize="14sp"
            />
    </LinearLayout>
</LinearLayout>